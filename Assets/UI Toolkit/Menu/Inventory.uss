.main-border {
    flex-grow: 0;
    width: 80%;
    height: 80%;
    background-color: rgb(0, 0, 0);
    position: absolute;
    transition-duration: 0.4s;
    translate: 0 120%;
    opacity: 0;
}

.main-border.on {
    opacity: 1;
    translate: 0 0;
}

.btn {
    position: absolute;
    transition-duration: 0.4s;
    background-color: rgb(192, 192, 192);
}

.btn:hover {
    background-color: rgb(255, 255, 255);
}
